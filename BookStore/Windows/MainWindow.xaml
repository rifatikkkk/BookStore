<Window x:Class="BookStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore"
        mc:Ignorable="d"
        WindowStyle="None" WindowStartupLocation="CenterScreen"
        MinHeight="450" MinWidth="800" 
        Height="450" Width="800" 
        Title="MainWindow" MouseDown="Window_MouseDown">
    <Grid>
        <Button x:Name="btnClose" Content="X" FontSize="25" FontWeight="Bold" 
                VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10"
                Width="40" Height="40" Click="btnClose_Click"/>
        <Button x:Name="btnNext" Content="Открыть каталог" FontSize="20" FontWeight="Bold"
                Padding="20"
                VerticalAlignment="Center" HorizontalAlignment="Center" Click="btnNext_Click" />
    </Grid>
</Window>
